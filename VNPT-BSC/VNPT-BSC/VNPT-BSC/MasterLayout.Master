<script type="text/javascript">
    var quyenHeThong = <%= javaSerial.Serialize(quyenHeThong)%>
    $(document).ready(function () {
        $(".cls-bsc").hide();
        $(".qlybsc_dv").hide();
        $(".qlybsc_nv").hide();
        $(".admin").hide();
        //$(".danhmucbsc").show();
        $(".danhmucbsc").hide();
        $(".danhmucbsc > ul > li").hide();
        $("#phanhoiGiao").hide();
        $("#phanhoiThamDinh").hide();

        $("#danhsach_bsc_dagiao_thuctrang").hide();
        $("#danhsach_bsc_dagiao_thamdinh").hide();
        <%if (userDonVi == 2){%>
            $("#danhsach_bsc_dagiao_thuctrang").show();
            $("#danhsach_bsc_dagiao_thamdinh").show();
        <%}%>
        for (var nIndex = 0; nIndex < quyenHeThong.length; nIndex++) {
            // Chuyên viên bsc
            var quyen = quyenHeThong[nIndex];
            if (quyen == 2) {
                $(".qlybsc_dv").show();
                $(".qlybsc_nv").show();
                $(".danhmucbsc").show();
                $(".danhmucbsc > ul > li").show();
                $("#maubsc_donvi").show();
                $("#xuatmaubsc_donvi").show();
                $("#import_bsc").show();
                $("#xephang_bsc").show();
                $("#phanphoibsc_donvi").show();
                $("#nghiemthubsc_donvi").show();
                $("#nhanbsc_nhanvien").show();
                $("#danhsach_bsc_dagiao").show();
                $("#phanhoiGiao").show();
            }
            else if (quyen == 3) {
                $(".qlybsc_dv").show();
                $(".qlybsc_nv").show();
                $("#nhanbsc_donvi").show();
                $("#kiemdinhbsc_donvi").show();
                $("#maubsc_nhanvien").show();
                $("#xuat_maubsc_nhanvien").show();
                $("#import_maubsc_nhanvien").show();
                $("#phanphoibsc_nhanvien").show();
                $("#nhanbsc_nhanvien").show();
                $("#kiemdinhbsc_nhanvien").show();
                $("#nghiemthubsc_nhanvien").show();
                $("#phanhoiThamDinh").show();
                <%if (userDonVi == 13 || userDonVi == 14 || userDonVi == 15 || userDonVi == 16 || userDonVi == 18)
                  {%>
                    $(".danhmucbsc").show();
                    $(".danhmucbsc > ul > li#liKPI_PhongBanCN").show();
                    $(".qlybsc_dv").hide();
                    $("#maubsc_nhanvien").hide();
                    $("#xuat_maubsc_nhanvien").hide();
                    $("#import_maubsc_nhanvien").hide();
                    $("#phanphoibsc_nhanvien").hide();
                <%}%>
            }
            else if (quyen == 1) {
                $(".admin").show();
                $(".danhmucbsc").show();
                $(".danhmucbsc > ul > li").show();
            }
        }

        // Người dùng bình thường
        if (quyenHeThong.length == 0) {
            $(".qlybsc_nv").show();
            $("#nhanbsc_nhanvien").show();
            $(".danhmucbsc").hide();
        }

        $("#logout").click(function () {
            $.ajax({
                type: "POST",
                url: "/logout.aspx/thoat",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result) {
                    if (result.d) {
                        window.location.replace("/Login.aspx");
                    }
                },
                error: function (msg) { alert(msg.d); }
            });
        });

        $("#formChangePass").submit(function () {
            var old_pwd = $("#oldpwd").val();
            var new_pwd = $("#newpwd").val();
            var nhanvien_id = <%=userID%>;
            var requestData = {
                nhanvien_id: nhanvien_id,
                old_pwd: old_pwd,
                new_pwd: new_pwd
            };

            var szRequest = JSON.stringify(requestData);
            $.ajax({
                type: "POST",
                url: "/logout.aspx/changePass",
                data: szRequest,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result) {
                    if (result.d) {
                        alert("Thay đổi mật khẩu thành công!!!");
                        window.location.reload();
                    }
                    else {
                        alert("Mật khẩu cũ không đúng!!!");
                        return false;
                    }
                },
                error: function (msg) {
                    alert(msg.d);
                    return false;
                }
            });
            return false;
        });
    });
</script>